<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.calculators.QuailCapacity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:text="Quail Capacity Calculation"
                    android:textColor="@color/themeColor">

                </TextView>
                <View
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp">

                </View>

                <LinearLayout
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp">
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Length of Shed/Cage (in feet)"
                        android:textColor="@color/design_default_color_on_secondary"/>

                    <EditText
                        android:inputType="numberDecimal"
                        android:id="@+id/input_capacityquail_length_Id"
                        android:background="@drawable/shape_border_round"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp">

                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp">
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Width of Shed/Cage (in feet)"
                        android:textColor="@color/design_default_color_on_secondary"/>

                    <EditText
                        android:id="@+id/input_capacityquail_widthId"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:background="@drawable/shape_border_round"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal">

                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp">
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No. Of Floor (In Cage)"
                        android:textColor="@color/design_default_color_on_secondary"/>

                    <EditText
                        android:id="@+id/input_capacityquail_cageId"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:background="@drawable/shape_border_round"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal">

                    </EditText>
                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/design_default_color_on_secondary">

            </View>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="In Floor System "
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black">

                        </TextView>
                        <TextView
                            android:layout_marginRight="@dimen/_5sdp"
                            android:id="@+id/result_forcapacityFloor_quailId"
                            android:paddingLeft="@dimen/_2sdp"
                            android:drawableLeft="@drawable/ic_equal"
                            android:layout_weight="2"
                            android:textAlignment="textEnd"
                            android:layout_gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="In Cage System"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black">

                        </TextView>
                        <TextView
                            android:layout_marginRight="@dimen/_5sdp"
                            android:id="@+id/result_forcapacityCage_quailId"
                            android:paddingLeft="@dimen/_2sdp"
                            android:drawableLeft="@drawable/ic_equal"
                            android:layout_weight="2"
                            android:textAlignment="textEnd"
                            android:layout_gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="@dimen/_24sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/quailcapacleareId"
                android:textAllCaps="false"
                android:backgroundTint="@color/design_default_color_error"
                android:text="Cleare All"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>

            <Button
                android:id="@+id/calculate_capacityquailId"
                android:textAllCaps="false"
                android:backgroundTint="@color/themeColor"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Calculate"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7815226488144324/4009948538">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>


</ScrollView>