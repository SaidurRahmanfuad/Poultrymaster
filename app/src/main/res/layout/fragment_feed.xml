<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.feedconversion.FeedFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:text="FCR Calculation"
                android:textColor="@color/themeColor">

            </TextView>
         <View
             android:layout_marginLeft="@dimen/_5sdp"
             android:layout_marginRight="@dimen/_5sdp"
             android:background="@color/colorPrimaryDark"
             android:layout_width="match_parent"
             android:layout_height="@dimen/_3sdp">

         </View>

          <LinearLayout
              android:layout_marginRight="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_5sdp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_38sdp">
              <TextView
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Number of birds when started"
                  android:textColor="@color/design_default_color_on_secondary"/>

              <EditText

                  android:background="@drawable/shape_border_round"
                  android:layout_weight="2"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_24sdp"
                  android:layout_marginLeft="@dimen/_3sdp"
                  android:layout_marginRight="@dimen/_3sdp"
                  android:layout_marginStart="@dimen/_3sdp">

              </EditText>
          </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp">
                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of birds dead+culled"
                    android:textColor="@color/design_default_color_on_secondary"/>

                <EditText
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:background="@drawable/shape_border_round"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp">
                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total weight of sold bird (Kg)"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:background="@drawable/shape_border_round"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp">

                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp">
                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total feed intake (Kg)"
                    android:textColor="@color/themeColor"/>

                <EditText android:layout_marginLeft="@dimen/_3sdp"
                    android:background="@drawable/shape_border_round"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/design_default_color_on_secondary">

        </View>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight=".5"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FCR (Considering Morality)">

                </TextView>
                <TextView
                    android:paddingLeft="@dimen/_2sdp"
                    android:drawableLeft="@drawable/ic_equal"
                    android:id="@+id/result_fcr_show"
                    android:layout_weight="2.5"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.77"
                    android:textColor="@color/design_default_color_on_secondary">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight=".5"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FCR (Without Considering Morality)">

                </TextView>
                <TextView
                    android:paddingLeft="@dimen/_2sdp"
                    android:drawableLeft="@drawable/ic_equal"
                    android:id="@+id/result_wfcr_show"
                    android:layout_weight="2.5"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.88"
                    android:textColor="@color/design_default_color_on_secondary">

                </TextView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_marginTop="@dimen/_24sdp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:textAllCaps="false"
        android:backgroundTint="@color/design_default_color_error"
        android:text="Cleare All"
        android:textColor="@color/white"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>

    <Button
        android:textAllCaps="false"
        android:backgroundTint="@color/themeColor"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="1"
        android:text="Calculate"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>
</LinearLayout>
</LinearLayout>