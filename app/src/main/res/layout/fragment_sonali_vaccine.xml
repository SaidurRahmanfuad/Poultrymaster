<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:context=".ui.home.vaccine.SonaliVaccine">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/themeColor"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সোনালি মুরগির জন্য - টিকা/কৃমিনাশক প্রদান কর্মসূচি"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                >

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:weightSum="2"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="বয়স"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"/>





                <TextView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="টিকা"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight="1.2"
                    android:background="#E66C95"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="১ দিন"
                    android:textColor="@color/white" />





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight=".8"
                    android:background="@color/themeColor"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="৫ দিন"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight="1.2"
                    android:background="#E66C95"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="১৪ দিন"
                    android:textColor="@color/white" />




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight=".8"
                    android:background="@color/themeColor"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="গামবোরো ইন্টারমেডিয়েট"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight="1.2"
                    android:background="#E66C95"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="২০ বা ২২ দিন"
                    android:textColor="@color/white" />




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight=".8"
                    android:background="@color/themeColor"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="গামবোরো ইন্টারমেডিয়েট+"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight="1.2"
                    android:background="#E66C95"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="২৮ দিন"
                    android:textColor="@color/white" />




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight=".8"
                    android:background="@color/themeColor"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="(রাণীক্ষেত+ব্রঙ্কাইটিস)"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight="1.2"
                    android:background="#E66C95"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="৪০ বা ৪২ দিন"
                    android:textColor="@color/white" />





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight=".8"
                    android:background="@color/themeColor"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="রাণীক্ষেত (ক্লোন)"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>





        </LinearLayout>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7815226488144324/8879131832">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

</ScrollView>